{
  "manifest_version": 2,

  "name": "unexpected-reboots",
  "description": "to-be-added",
  "version": "1.0",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "index.html"
  },


  "background": {
    "scripts": ["rebootBackground.js"]

  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["rebootContent.js"]
    }
  ],

  "permissions": [
    "http://*/*",
    "https://*/*",
    "activeTab"
  ]

 
}
